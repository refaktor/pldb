 macro @foo(bool run, #lazy)
 {
   if (run) #lazy;
 }
 // Only &quot;Said: Hello&quot; is printed:
 @foo(false, print(&quot;Bye&quot;));
 @foo(true, print(&quot;Hello&quot;));

